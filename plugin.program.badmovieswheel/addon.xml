<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.badmovieswheel" name="Bad Movies Wheel" version="1.0.0" provider-name="Tim Pevey">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Randomly selects bad movies to watch</summary>
        <description lang="en_GB">This addon creates a spinning wheel with 10 randomly selected unwatched movies tagged as "Bad Movies" and lets fate decide which one you'll watch tonight!</description>
        <disclaimer lang="en_GB">Use at your own risk!</disclaimer>
        <language>en</language>
        <platform>all</platform>
        <license>MIT</license>
        <forum></forum>
        <website></website>
        <email></email>
        <source></source>
        <assets>
            <icon></icon>
            <fanart></fanart>
            <screenshot></screenshot>
        </assets>
    </extension>
</addon>